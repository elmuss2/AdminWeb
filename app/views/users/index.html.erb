<p style="color: green"><%= notice %></p>

<h1>Users List</h1>

<table class="table table-striped-columns">
<thead class="table-dark">
<tr>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Phone Number</th>
<th> Role </th>
<th>Modify</th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
<td><%= user.first_name %></td>
<td><%= user.last_name %> </td>
<td><%= user.email %> </td>
<td><%= user.phone %> </td>
<td><%= user.role %> </td>
<td>
    <p>
          <%= link_to "Edit user", user , class:'btn btn-secondary' %>
    </p>
</td>
</tr>
<% end %>
</tbody>
</table>


<%= link_to "New user", new_user_path , class:'btn btn-secondary' %>
